@using MVC_Project.Models
@model List<Category>
<div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap">
        <thead>
            <tr>
                <th>ID</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
            
        </thead>
        
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a href="#" class="btn btn-outline-info">Details</a>
                        <a href="/admin/categories/edit/@item.Id" class="btn btn-outline-warning">Edit</a>
                        <a href="/admin/categories/delete/@item.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-outline-primary mt-3" href="/admin/categories/add">Add New Category</a>
</div>