@using MVC_Project.Models
@using MVC_Project.ViewModels
@model List<ProductViewModel>
<div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap">
        <thead>
            <tr>
                <th>ID</th>
                <th>Product Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Image</th>
                <th>Category</th>
                <th>Action</th>
            </tr>

        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td><img src="@item.ImageUrl" alt="This Is Image" width="50px" /></td>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        <a href="" class="btn btn-outline-info">Details</a>
                        <a href="/admin/products/edit/@item.Id" class="btn btn-outline-warning">Edit</a>
                        <a href="/admin/Products/remove/@item.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-outline-primary mt-3" href="/admin/products/create">Add New Product</a>
</div>