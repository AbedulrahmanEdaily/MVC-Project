@model Product

<form method="Post" asp-action="Update" asp-controller="products" asp-area="admin" enctype="multipart/form-data">
    <div class="card-body">
        <input type="hidden" asp-for="Id">
        <div class="form-group">
            <label for="ProductName" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter Products Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label for="ProductDescription" asp-for="Description"></label>

            <textarea asp-for="Description" class="form-control" placeholder="Enter Products Description">@Model.Description</textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label for="ProductPrice" asp-for="Price"></label>
            <input asp-for="Price" class="form-control" placeholder="Enter Products Price">
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>
        <div class="form-group">
            <label for="ProductQuantity" asp-for="Quantity"></label>
            <input asp-for="Quantity" class="form-control" placeholder="Enter Products Quantity">
            <span class="text-danger" asp-validation-for="Quantity"></span>
        </div>
        <div class="form-group">
            <label asp-for="Image"></label>
            <img src="~/imges/@Model.Image" alt="This Is Image"/>
            <input type="file" asp-for="Image" class="form-control" placeholder="Enter Products Image">
            <span class="text-danger" asp-validation-for="Image"></span>
        </div>
        <div class="form-group">
            <label for="ProductImage" asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control" name="CategoryId">
                @foreach (var item in ViewBag.Categories)
                {
                    if (item.Id == Model.CategoryId)
                    {
                        <option selected value="@item.Id">@item.Name</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Edit</button>
    </div>
</form>